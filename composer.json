{
    "name": "kamilmusial/ntfy-php",
    "description": "NTFY client in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Musial",
            "email": "kamil.k.musial@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "guzzlehttp/guzzle": "^7.8",
        "jms/serializer": "^3.29"
    },
    "autoload": {
        "psr-4": {
            "Kamilmusial\\NtfyPhp\\": "src/",
            "Kamilmusial\\NtfyPhpTest\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/var-dumper": "^7.0",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "^8.14",
        "phpstan/phpstan": "^1.10",
        "spaze/phpstan-disallowed-calls": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
