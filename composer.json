{
    "name": "kamilmusial/ntfy-php",
    "description": "NTFY client in PHP",
    "type": "library",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "license": "MIT License",
    "autoload": {
        "psr-4": {
            "Kamilmusial\\NtfyPhp\\": "src/",
            "Kamilmusial\\NtfyPhpTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Kamil Musial",
            "email": "kkmusial@proton.me"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/var-dumper": "^7.0",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "^8.14"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
